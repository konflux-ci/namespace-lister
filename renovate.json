{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "gomod": {
    "enabled": true,
    "postUpdateOptions": [
      "gomodTidy"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/^config/.*\\.yaml$/"
    ]
  },
  "kustomize": {
    "managerFilePatterns": [
      "/^/config/kustomization\\.ya?ml$/"
    ],
    "pinDigests": false
  },
  "dockerfile": {
    "enabled": true
  }
}
